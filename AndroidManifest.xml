<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irbis.smsinterceptor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"  />
    
    
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:allowBackup="true"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar">
        <activity
            android:name="com.irbis.smsinterceptor.SMSInterceptorActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.irbis.smsinterceptor.DetailedActivity"
            android:label="@string/app_name">
        </activity>
        <receiver android:name="com.irbis.smsinterceptor.SMSMonitor" android:enabled="true">
                <intent-filter android:priority="1000">
                        <action android:name="android.provider.Telephony.SMS_RECEIVED" />
                 </intent-filter>
        </receiver>        
    </application>
</manifest>